doctype html
html(lang='en')
  
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width')
    meta(name='format-detection' content='email=no,telephone=no')
    title= meta.title
    meta(name='description' content=meta.description)
    meta(name='theme-color' content='#b8d1ea')
    link(rel='stylesheet' href=`${meta.publicUrl}index.css`)
    link(rel='apple-touch-icon' sizes='192x192' href=`${meta.publicUrl}media/favicon.png`)
    link(rel='icon' type='image/png' sizes='192x192' href=`${meta.publicUrl}media/favicon.png`)
    
  body(class=`
    bg-darker-blue-purple
    text-lighter
    font-barlow
    font-regular
    text-sm
    leading-sm
  `)
    nav#pageNav(class=`
      absolute
      top-0
      left-0
      w-screen
    `)
      a(href='#contact')= 'Contact'
    
    figure(class=`
      absolute
      top-0
      right-0
      max-w-10c
    `)
      img(
        src='media/pattern-upper-right.svg'
        alt='A decorative pattern'
      )
  
    main#pageMain(class=`
      w-screen
      py-3c c11_py-5c c17_py-4c
    `)
      include /main.pug
      
    figure(class=`
      max-w-11c
    `)
      img(
        src='media/pattern-lower-left.svg'
        alt='A decorative pattern'
      )
      
    script(src=`${meta.publicUrl}index.js`)
