mixin stack(classes='')
  div(class=`
    w-full
    flex
    flex-col
    items-center
    ${classes}
  `)
    block


mixin text(classes='')
  div(class=`
    max-w-10c
    pb-3b
    typeset
    ${classes}
  `)
    block


mixin textSm(classes='')
  +text(`
    text-sm c11_text-base
    leading-sm-narrow c11_leading-base-narrow
    ${classes}
  `)
    block


mixin textBase(classes='')
  +text(`
    text-base c11_text-lg
    leading-base-narrow c11_leading-lg-narrow
    ${classes}
  `)
    block


mixin textLg(classes='')
  +text(`
    text-lg c11_text-xl
    leading-lg-narrow c11_leading-xl-narrow
    ${classes}
  `)
    block


mixin graphic({ src, alt='Decorative Illustration', rounded=false }, classes='')
  figure(class=classes)
    img(
      src=src
      alt=alt
      class=(rounded ? 'rounded' : '') 
    )


mixin graphicSm(args, classes='')
  +graphic(args, `
    max-w-3c
    pb-2b
    ${classes}
  `)


mixin graphicMd(args, classes='')
  +graphic(args, `
    max-w-5c
    pb-3b
    ${classes}
  `)


mixin graphicLg(args, classes='')
  +graphic(args, `
    max-w-10c
    pb-6b
    ${classes}
  `)


